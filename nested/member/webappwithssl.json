{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "appName": {
      "type": "string"
    },
    "appPlanName": {
      "type": "string"
    },
    "appPlanRef": {
      "type": "string"
    },
    "externalAppHostname": {
      "type": "string"
    },
    "aseName": {
      "type": "string"
    },
    "aseRef": {
      "type": "string"
    },
    "certificateName": {
      "type": "string"
    }
  },
  "variables": {
  },
  "resources": [
    {
      "name": "[parameters('appName')]",
      "type": "Microsoft.Web/sites",
      "kind": "app",
      "location": "[resourceGroup().location]",
      "apiVersion": "2016-08-01",
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', parameters('appPlanName'))]"
      ],
      "tags": {
        "displayName": "[concat('Web App - ', parameters('appName'))]"
      },
      "properties": {
        "name": "[parameters('appName')]",
        "serverFarmId": "[parameters('appPlanRef')]"
      },
      "resources": [
        {
          "type": "Microsoft.Web/sites/hostnameBindings",
          "name": "[concat(parameters('appName'), '/', parameters('externalAppHostname'))]",
          "apiVersion": "2016-03-01",
          "tags": {
            "displayName": "[concat('Custom Domain - ', parameters('externalAppHostname'))]"
          },
          "properties": {
            "sslState": "SniEnabled",
            "thumbprint": "[reference(resourceId('Microsoft.Web/certificates', parameters('certificateName'))).Thumbprint]"
          }
        }
      ]
    }
  ],
  "outputs": {
  }
}
